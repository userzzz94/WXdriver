<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDialogRouteChangeMakeTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_x100"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/dp_x50"
        android:layout_marginTop="@dimen/dp_x50"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_x100"
        android:text="变更原因："
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/dp_x50"/>
    <EditText
        android:id="@+id/etDialogRouteChangeReason"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_x180"
        android:background="@drawable/border"
        android:gravity="left"
        android:layout_marginRight="@dimen/dp_x50"
        android:layout_marginLeft="@dimen/dp_x50"/>

    <View
        style="@style/lightGray_LineView"
        android:layout_marginTop="@dimen/dp_x30"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_x80"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvDialogRouteChangeMakeSureNO"
            style="@style/dialog_arrive_txt"/>
        <View
            android:id="@+id/vDialogRouteChangeMakeLine"
            style="@style/lightGray_vertical_LineView"/>
        <TextView
            android:id="@+id/tvDialogRouteChangeMakeSureYes"
            style="@style/dialog_arrive_txt"/>
    </LinearLayout>

</LinearLayout>
