<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.wanxiang.zzz.com.wxdriver.function_activity.getOrderListActivity"
    android:orientation="vertical"
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/ivMyOrderListBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/arrow_back"/>
        <TextView
            style="@style/activity_title_txt_style"
            android:text="任务管理"/>
    </LinearLayout>
    <View
        style="@style/lightGray_LineView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_x80"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMyOrderListAll"
                style="@style/order_list_tab_txt"
                android:text="推送任务"/>
            <TextView
                android:id="@+id/tvMyOrderListUndo"
                style="@style/order_list_tab_txt"
                android:text="已接单"/>
            <TextView
                android:id="@+id/tvMyOrderListDone"
                style="@style/order_list_tab_txt"
                android:text="已完成"/>
            <TextView
                android:id="@+id/tvMyOrderListCancel"
                style="@style/order_list_tab_txt"
                android:text="取消作废"/>
        </LinearLayout>
        <View
            style="@style/lightGray_LineView"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/vgMyOrderList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>
