<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="demo.wanxiang.zzz.com.wxdriver.center_activity.ChangeCarInfoActivity">
    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_x100">

        <ImageView
            android:id="@+id/activity_ChangeCar_back"
            android:layout_width="@dimen/dp_x100"
            android:layout_height="@dimen/dp_x100"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_x20"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_x110"
            android:text="更改车辆信息"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--填写姓名等信息-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_x30"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_x30"
                    android:layout_weight="2"
                    android:text="随车电话："
                    android:textColor="@color/black_color2"
                    android:textSize="15sp" />

                <demo.wanxiang.zzz.com.wxdriver.view.MyEditText
                    android:id="@+id/et_ChangeCar_cartel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_x40"
                    android:layout_weight="6"
                    android:background="@drawable/selector_activity_login_edittext_background"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_x50"
                android:layout_marginRight="@dimen/dp_x50"
                android:layout_marginTop="@dimen/dp_x20"
                android:background="@color/gray_color7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_x30"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_x30"
                    android:layout_weight="2"
                    android:text="车牌号："
                    android:textColor="@color/black_color2"
                    android:textSize="15sp" />

                <demo.wanxiang.zzz.com.wxdriver.view.MyEditText
                    android:id="@+id/et_ChangeCar_carnum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_x40"
                    android:layout_weight="6"
                    android:background="@drawable/selector_activity_login_edittext_background"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_x50"
                android:layout_marginRight="@dimen/dp_x50"
                android:layout_marginTop="@dimen/dp_x20"
                android:background="@color/gray_color7" />
            <!--上传证件照片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_ChangeCar_lisence_card"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_x80"
                        android:gravity="center"
                        android:text="驾驶证"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/img_ChangeCar_lisence_card"
                        android:layout_width="@dimen/dp_x350"
                        android:layout_height="@dimen/dp_x250"
                        android:scaleType="fitXY"
                        android:src="@drawable/image" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_ChangeCar_driver_card"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_x80"
                        android:gravity="center"
                        android:text="行驶证"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/img_ChangeCar_driver_card"
                        android:layout_width="@dimen/dp_x350"
                        android:layout_height="@dimen/dp_x250"
                        android:scaleType="fitXY"
                        android:src="@drawable/image" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_ChangeCar_idcard_one"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_x80"
                        android:gravity="center"
                        android:text="身份证正面"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/img_ChangeCar_idcard_one"
                        android:layout_width="@dimen/dp_x350"
                        android:layout_height="@dimen/dp_x250"
                        android:scaleType="fitXY"
                        android:src="@drawable/image" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ChangeCar_idcard_two"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_x80"
                        android:gravity="center"
                        android:text="身份证反面"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/img_ChangeCar_idcard_two"
                        android:layout_width="@dimen/dp_x350"
                        android:layout_height="@dimen/dp_x250"
                        android:scaleType="fitXY"
                        android:src="@drawable/image" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnChangeCarInfo_finish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_x75"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_x50"
                android:layout_marginLeft="@dimen/dp_x50"
                android:layout_marginRight="@dimen/dp_x50"
                android:layout_marginTop="@dimen/dp_x70"
                android:background="@color/button_blue"
                android:text="确定更改"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
