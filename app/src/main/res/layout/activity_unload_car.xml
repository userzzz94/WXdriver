<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="demo.wanxiang.zzz.com.wxdriver.function_activity.UnloadCarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_x100"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUnloadCarBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/arrow_back" />

        <TextView
            style="@style/activity_title_txt_style"
            android:text="卸车确认" />
    </LinearLayout>

    <View style="@style/lightGray_LineView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_x100"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_x15"
        android:paddingRight="@dimen/dp_x15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卸车重量"
            android:textColor="@color/colorDarkGray"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/unload_car_pure_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_x15"
            android:layout_weight="2"
            android:background="@drawable/shape_blue_white"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/dp_x5"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_x100"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_x15"
        android:paddingRight="@dimen/dp_x15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆皮重"
            android:textColor="@color/colorDarkGray"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/unload_car_pi_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_x15"
            android:layout_weight="2"
            android:background="@drawable/shape_blue_white"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/dp_x5"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_x60"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_x15"
        android:paddingRight="@dimen/dp_x15"
        android:text="榜单照片"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/unload_car_pounds_photo"
        android:layout_width="@dimen/dp_x300"
        android:layout_height="@dimen/dp_x200"
        android:background="@drawable/image"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/unload_car_sureBtn"
        android:layout_width="@dimen/dp_x300"
        android:layout_height="@dimen/dp_x100"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_x50"
        android:background="@color/button_blue"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
